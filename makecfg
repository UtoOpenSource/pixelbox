DIRS  := ./src/scr ./src/libs ./src/engine ./src/game

INCS  := $(addprefix -I,$(DIRS)) -I./src/ 
FLAGS := -O0 
LFLAGS := -g
SRCS := $(shell find $(DIRS) -name '*.c' -or -name '*.cpp') ./src/archive-generated.c

all: pixelbox

# generate asset archive :D
./src/archive-generated.c : ./tools/archiver assets/* lua/*
	./tools/archiver assets/* lua/* > ./src/archive-generated.c
